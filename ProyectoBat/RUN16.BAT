@ECHO OFF
TITLE SCRIPT BAT
REM COPIAR TODOS LOS ARCHIVOS .BAT DE UNA RUTA CUALQUIERA HACIA OTRA RUTA
CLS
SETLOCAL ENABLEDELAYEDEXPANSION
SET "RUTA=H:\"
SET C=0
FOR /R %RUTA% %%I IN (*.BAT) DO (
	SET /A C=!C!+1
    SET NOMBREARCHIVO=!C!_%%~nxI
    SET DESTINO=C:\SALVAR\!NOMBREARCHIVO!
    COPY "%%I" !DESTINO!
)
PAUSE